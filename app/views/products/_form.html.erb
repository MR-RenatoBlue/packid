<%= form_with(model: product, local: true) do |form| %>
  <%= render "shared/form_errors", form: form %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div> 

  <div class="form-floating">
    <% Category.all.each do |category| %>
      <%= check_box_tag "product[categoy_ids][]", category.id, @product.category_ids.include?(category.id) %>
      <%= category.name %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
